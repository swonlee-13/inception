FROM alpine:3.19

RUN apk update && \
	apk upgrade && \
	apk add --no-cache mariadb mariadb-client

RUN mkdir -p /var/run/mysqld && \
	chown -R mysql:mysql /var/run/mysqld && \
	chmod 777 /var/run/mysqld


RUN mkdir -p /var/lib/mysql && \
chown -R mysql:mysql /var/lib/mysql

VOLUME /var/lib/mysql

COPY ./tools/50-server.cnf /etc/my.cnf.d/mariadb-server.conf
RUN chmod 644 /etc/my.cnf.d/mariadb-server.cnf

COPY ./tools/mariadb_setting.sh /var/lib/mysql/run/mariadb_setting.sh
RUN chmod 777 /etc/my.cnf.d/mariadb-server.cnf

USER mysql

# ENTRYPOINT [ "executable" ]
# CMD [ "executable" ]